<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee"  xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  <servlet>
    <servlet-name>Inscription</servlet-name>
    <servlet-class>com.chatting.servlets.Inscription</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Inscription</servlet-name>
    <url-pattern>/inscription</url-pattern>
  </servlet-mapping>
 
   <servlet>
    <servlet-name>Connection</servlet-name>
    <servlet-class>com.chatting.servlets.Connection</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Connection</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>Sujet</servlet-name>
    <servlet-class>com.chatting.servlets.Sujet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Sujet</servlet-name>
    <url-pattern>/sujet</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Discussion</servlet-name>
    <servlet-class>com.chatting.servlets.Discussion</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Discussion</servlet-name>
    <url-pattern>/discussion</url-pattern>
  </servlet-mapping>
</web-app>